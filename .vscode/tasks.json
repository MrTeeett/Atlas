{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Atlas: Create admin user (admin/admin)",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "./cmd/atlas",
        "-config",
        "${workspaceFolder}/atlas.json",
        "user",
        "add",
        "-user",
        "admin",
        "-pass",
        "admin",
        "-role",
        "admin",
        "-exec",
        "true",
        "-procs",
        "true",
        "-fw",
        "true",
        "-fs-sudo",
        "true",
        "-fs-any",
        "true"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "GOCACHE": "${workspaceFolder}/.gocache/vscode"
        }
      },
      "problemMatcher": []
    }
  ]
}

